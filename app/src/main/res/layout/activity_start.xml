                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_eloom"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
