<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:keepScreenOn="true"
    android:gravity="center_horizontal"
    android:background="@drawable/backgd"
    tools:context=".QuestionsActivity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_Banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:adSize="SMART_BANNER"
        app:adUnitId="ca-app-pub-5637187199850424/2798241234">
        <!--test code ca-app-pub-3940256099942544/6300978111 -->
        <!--real code ca-app-pub-5637187199850424/2798241234 -->
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adView_Banner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">


       <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="none">


       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="-15dp"
            android:background="@drawable/ic_profile_bg"
            android:gravity="center"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_heart"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "محاولات"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtv_life_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/ic_profile_bg"
            android:gravity="center"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/player_circular_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thaqayif_round"
                app:civ_border_color="#FFA000"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="-15dp"
            android:background="@drawable/ic_profile_bg"
            android:gravity="center"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifTextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_coin"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtv_score_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "نقاط"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "10000"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_marginTop="-38dp"
               android:orientation="horizontal">


               <LinearLayout
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_marginEnd="50dp"
                   android:background="@drawable/ic_profile_bg"
                   android:gravity="center"
                   android:orientation="vertical">

                   <pl.droidsonroids.gif.GifTextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center"
                       android:background="@drawable/ic_troph"
                       android:gravity="center" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text= "كل النقاط"
                       android:textColor="@color/white"
                       android:textSize="10sp"
                       android:textStyle="bold" />

                   <TextView
                       android:id="@+id/txtv_total_score"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text= "10000"
                       android:textAlignment="center"
                       android:textColor="@color/white"
                       android:textSize="10sp"
                       android:textStyle="bold" />


               </LinearLayout>




               <ImageButton
                   android:id="@+id/btn_go_home"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:background="@drawable/btn_eff_pause_home" />



           </LinearLayout>



        <ImageButton
            android:id="@+id/imgv_question_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-37dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/btn_eff_eloom" />

        <TextView
            android:id="@+id/txtv_question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:maxLines="1"
            android:text= "علوم"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

           <RelativeLayout
               android:layout_width="285dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="-110dp"
               android:layout_marginBottom="-15dp"
               android:elevation="1dp">

             <LinearLayout
                 android:id="@+id/lay_facebook_hint"
                 android:layout_width="170dp"
                 android:layout_height="120dp"
                 android:orientation="vertical"
                 android:visibility="invisible"
                 android:background="@drawable/ic_facebook_message">

                 <pl.droidsonroids.gif.GifTextView
                     android:layout_width="30dp"
                     android:layout_height="30dp"
                     android:layout_gravity="center"
                     android:layout_marginEnd="10dp"
                     android:background="@drawable/ic_message_gif"
                     android:gravity="center" />


                 <TextView
                     android:layout_width="107dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_marginEnd="10dp"
                     android:layout_marginTop="5dp"
                     android:clickable="false"
                     android:text="أستعين بأصدقائك على فيسبوك لحل السؤال عبر المشاركة"
                     android:textColor="@color/white"
                     android:textSize="13sp"
                     android:textStyle="normal"/>
             </LinearLayout>

               <LinearLayout
                   android:id="@+id/lay_time_hint"
                   android:layout_width="170dp"
                   android:layout_height="120dp"
                   android:orientation="vertical"
                   android:layout_alignParentEnd="true"
                   android:visibility="invisible"
                   android:background="@drawable/ic_timer_message">

                   <pl.droidsonroids.gif.GifTextView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_gravity="center"
                       android:layout_marginStart="10dp"
                       android:background="@drawable/ic_alarm_message"
                       android:gravity="center" />

                   <TextView
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginStart="10dp"
                       android:clickable="false"
                       android:text="فى كل مرة ستعود فيها لنفس السؤال سيظهر لك الوقت المتبقى لحل السؤال ... هيا أسرع"
                       android:textColor="@color/white"
                       android:textSize="12sp"
                       android:textStyle="normal"/>
               </LinearLayout>
           </RelativeLayout>

        <RelativeLayout
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <ImageButton
                android:id="@+id/btn_share_help_facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_eff_facebook_help" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:background="@drawable/ic_timer_bg"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/gif_time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/ic_alarm_zero"
                    />

                <TextView
                    android:id="@+id/txtv_question_timer"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:text="30"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="285dp"
            android:layout_height="120dp"
            android:layout_marginTop="-20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/ic_questions_bg">


            <TextView
                android:id="@+id/txtv_question_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="285dp"
            android:layout_height="33dp"
             android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btn_answer_one"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:background="@drawable/btn_eff_answer_view" >
            </ImageButton>

            <TextView
                android:id="@+id/txtv_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal">
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="285dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btn_answer_two"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:background="@drawable/btn_eff_answer_view" >
            </ImageButton>

            <TextView
                android:id="@+id/txtv_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal">
            </TextView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="285dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btn_answer_three"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:background="@drawable/btn_eff_answer_view" >
            </ImageButton>

            <TextView
                android:id="@+id/txtv_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal">
            </TextView>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_moktaree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_moktaree" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="مخترعين"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_eloom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_eloom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="علوم"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_tareek"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_tareek" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="تاريخ"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_thakafe"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_thakafa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="ثقافة"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_reyada"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_reyada" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="رياضة"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btn_gografya"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/btn_eff_gografya" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="جغرافيا"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

       </ScrollView>

    </LinearLayout>




</RelativeLayout>